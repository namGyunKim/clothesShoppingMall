{{>mustache/layouts/header}}
<div class="container"><br>
    <h1>상품등록</h1>
    <form action="/clothes/new2" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">상품명 입력</label>
            <input type="text" class="form-control" name="title" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">상품 설명</label>
            <input type="text" class="form-control" name="content" required>
        </div>

        <div class="mb-3">
            <label for="exampleInputPrice1" class="form-label">상품 가격</label>
            <input type="number" class="form-control" name="price" required>
        </div>

        <label class="form-check-label">
            카테고리
        </label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="kate" id="exampleRadios1" value="티" checked>
            <label class="form-check-label" for="exampleRadios1">
                티
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="kate" id="exampleRadios2" value="청바지">
            <label class="form-check-label" for="exampleRadios2">
                청바지
            </label>
        </div>
    <hr>
        성별
        </label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="남성" checked>
            <label class="form-check-label" for="exampleRadios1">
                남성
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="여성">
            <label class="form-check-label" for="exampleRadios2">
                여성
            </label>
        </div>
        <div class="mb-3">
            <label for="exampleInputPrice1" class="form-label">사이즈</label>
            <input type="text" class="form-control" name="clothessize" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputPrice1" class="form-label">재고 수량</label>
            <input type="number" class="form-control" name="stock" required>
        </div>



        <button type="submit" class="btn btn-primary btn-w">상품등록</button>

    </form>
    <button type="button" class="btn btn-primary btn-w" onclick="location.href='/clothes/index'">전체상품 목록</button>
</div>
{{>mustache/layouts/footer}}